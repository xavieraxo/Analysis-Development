<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Crear Nuevo Proyecto</MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="_name" Label="Nombre del Proyecto *" Variant="Variant.Outlined" Required="true" />
            <MudTextField @bind-Value="_description" Label="DescripciÃ³n *" Variant="Variant.Outlined" Lines="4" Required="true" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">Crear</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancelar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance? MudDialog { get; set; }

    private string _name = string.Empty;
    private string _description = string.Empty;

    private void Submit()
    {
        if (string.IsNullOrWhiteSpace(_name) || string.IsNullOrWhiteSpace(_description))
        {
            return;
        }
        MudDialog?.Close(DialogResult.Ok(new CreateProjectRequest { Name = _name, Description = _description }));
    }

    private void Cancel() => MudDialog?.Cancel();
}

